    <script>
      const authToken = localStorage.getItem("authToken");
      // 토큰이 있는 로그인 된 사용자
      if (authToken != null || authToken != undefined) {
        if (confirm("로그아웃 하시겠습니까?")) {
          localStorage.removeItem("authToken");
        } else {
          window.history.back();
        }
      }

      // sign in 버튼 눌렀을 때 로그인 POST 요청하는 함수
      function postLogin() {
        const username = document.getElementById("username");
        const password = document.getElementById("password");

        if(!username.value.trim() || username.value.trim() == ''){
          console.log('username.value.trim()', username.value.trim())
          alert('아이디를 입력해주세요.')
          username.value = '' // 공백 제거
          username.focus()
          return
        }

        if(!password.value.trim() || password.value.trim() == ''){
          alert('비밀번호를 입력해주세요.')
          password.value = '' // 공백 제거
          password.focus()
          return
        }

        fetch("http://127.0.0.1:7070/auth/login", {
          method: "POST",
          headers: {
            "Content-Type": "application/json",
          },
          body: JSON.stringify({
            // 객체를 JSON 문자열로 변환
            username: username.value,
            password: password.value,
          }),
        })
          .then((response) => response.json())
          .then((data) => {
            if (!data.status) {
              alert("아이디 혹은 비밀번호를 다시 입력해주세요.");
              password.value = "";
              return;
            }
            localStorage.setItem("authToken", data.token);
            location.href = "/";
          })
          .catch((error) => console.error("Error:", error));
      }

      // Enter키 입력시 함수 호출
      function pressEnter(e){
        if(e.keyCode == 13) {
          postLogin()
        }
      }
    </script>
